# Kokotajlo Backend Environment Variables
# Copy this file to .env for local development
# Variables are set automatically by deploy.js for Railway

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Server Configuration
API_HOST=0.0.0.0
API_PORT=4001
DEBUG=true
LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=https://kokotajlo.up.railway.app http://localhost:4000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Email Configuration (Optional)
MAILJET_API_KEY=your-mailjet-api-key
MAILJET_SECRET_KEY=your-mailjet-secret-key
EMAIL_KEY=stub

# Database (Future - for lead storage)
# DATABASE_URL=postgresql://user:password@host:port/database
# DB_HOST=containers-us-west-1.railway.app
# DB_PORT=5432
# DB_NAME=railway
# DB_USER=postgres
# DB_PASSWORD=your-db-password

# Redis (Optional - for caching)
# REDIS_URL=redis://default:password@host:port

# Security
SECRET_KEY=your-production-secret-key-here